<!-- MainWindow.xaml -->
<Window x:Class="ClientCentralino_vs2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ClientCentralino_vs2"
        mc:Ignorable="d"
        Title="Centralino Manager" Height="650" Width="1000"
        FontFamily="Segoe UI" FontSize="12">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TabControl x:Name="TabControl" Grid.Row="1">
            <!-- Chiamate Tab -->
            <TabItem Header="Chiamate">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
                        <TextBlock Text="Filtra per numero:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                        <TextBox x:Name="TxtFilterNumber" Width="200" Margin="0,0,10,0"/>
                        <Button x:Name="BtnFilterCalls" Content="Filtra" Width="80" Click="BtnFilterCalls_Click"/>
                        <Button x:Name="BtnRefreshCalls" Content="Aggiorna" Width="80" Margin="10,0,0,0" Click="BtnRefreshCalls_Click"/>
                    </StackPanel>

                    <DataGrid x:Name="DgCalls" Grid.Row="1" AutoGenerateColumns="False" IsReadOnly="True" 
                              SelectionMode="Single" SelectionChanged="DgCalls_SelectionChanged">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID" Binding="{Binding ID}" Width="50"/>
                            <DataGridTextColumn Header="Tipo" Binding="{Binding TipoChiamata}" Width="80"/>
                            <DataGridTextColumn Header="Numero Chiamante" Binding="{Binding NumeroChiamante}" Width="120"/>
                            <DataGridTextColumn Header="Numero Chiamato" Binding="{Binding NumeroChiamato}" Width="120"/>
                            <DataGridTextColumn Header="Data Arrivo" Binding="{Binding DataArrivoChiamata, StringFormat=dd/MM/yyyy HH:mm:ss}" Width="150"/>
                            <DataGridTextColumn Header="Data Fine" Binding="{Binding DataFineChiamata, StringFormat=dd/MM/yyyy HH:mm:ss}" Width="150"/>
                            <DataGridTextColumn Header="Località" Binding="{Binding Locazione}" Width="*"/>
                        </DataGrid.Columns>
                    </DataGrid>

                    <Grid Grid.Row="2" Margin="0,10,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <GroupBox Header="Aggiorna Località" Grid.Column="0">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Località:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                                <TextBox x:Name="TxtLocation" Width="300" Margin="0,0,10,0"/>
                                <Button x:Name="BtnUpdateLocation" Content="Aggiorna" Width="100" Click="BtnUpdateLocation_Click"/>
                            </StackPanel>
                        </GroupBox>
                    </Grid>
                </Grid>
            </TabItem>

            <!-- Contatti Tab -->
            <TabItem Header="Contatti">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <GroupBox Header="Cerca Contatto" Grid.Row="0" Margin="0,0,0,10">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Text="Numero:" Grid.Column="0" VerticalAlignment="Center" Margin="0,0,10,0"/>
                            <TextBox x:Name="TxtSearchContact" Grid.Column="1" Margin="0,0,10,0"/>
                            <Button x:Name="BtnSearchContact" Grid.Column="2" Content="Cerca" Width="80" Click="BtnSearchContact_Click"/>
                        </Grid>
                    </GroupBox>

                    <GroupBox Header="Dettagli Contatto" Grid.Row="1" Margin="0,0,0,10">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Text="Numero:" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" Margin="0,5,10,5"/>
                            <TextBox x:Name="TxtContactNumber" Grid.Row="0" Grid.Column="1" Margin="0,5,10,5"/>

                            <TextBlock Text="Ragione Sociale:" Grid.Row="0" Grid.Column="2" VerticalAlignment="Center" Margin="0,5,10,5"/>
                            <TextBox x:Name="TxtContactCompany" Grid.Row="0" Grid.Column="3" Margin="0,5,10,5"/>

                            <TextBlock Text="Città:" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" Margin="0,5,10,5"/>
                            <TextBox x:Name="TxtContactCity" Grid.Row="1" Grid.Column="1" Margin="0,5,10,5"/>

                            <TextBlock Text="Interno:" Grid.Row="1" Grid.Column="2" VerticalAlignment="Center" Margin="0,5,10,5"/>
                            <TextBox x:Name="TxtContactInternal" Grid.Row="1" Grid.Column="3" Margin="0,5,10,5"/>

                            <Button x:Name="BtnSaveContact" Grid.Row="2" Grid.Column="3" Content="Salva Contatto" Width="120" 
                                    HorizontalAlignment="Right" Margin="0,10,0,0" Click="BtnSaveContact_Click"/>
                        </Grid>
                    </GroupBox>

                    <GroupBox Header="Chiamate del Contatto" Grid.Row="2">
                        <DataGrid x:Name="DgContactCalls" AutoGenerateColumns="False" IsReadOnly="True">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="ID" Binding="{Binding ID}" Width="50"/>
                                <DataGridTextColumn Header="Tipo" Binding="{Binding TipoChiamata}" Width="80"/>
                                <DataGridTextColumn Header="Data Arrivo" Binding="{Binding DataArrivoChiamata, StringFormat=dd/MM/yyyy HH:mm:ss}" Width="150"/>
                                <DataGridTextColumn Header="Data Fine" Binding="{Binding DataFineChiamata, StringFormat=dd/MM/yyyy HH:mm:ss}" Width="150"/>
                                <DataGridTextColumn Header="Durata (sec)" Binding="{Binding Durata.TotalSeconds, StringFormat=N0}" Width="100"/>
                                <DataGridTextColumn Header="Località" Binding="{Binding Extra}" Width="*"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </GroupBox>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>