<Window x:Class="ClientCentralino.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ClientCentralino"
        mc:Ignorable="d"
        Title="Statistiche Chiamate" Height="400" Width="700">
    <Grid>
        <ListView ItemsSource="{Binding Chiamate}">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="ID" DisplayMemberBinding="{Binding Id}" />
                    <GridViewColumn Header="Chiamante" DisplayMemberBinding="{Binding NumeroChiamanteID}" />
                    <GridViewColumn Header="Chiamato" DisplayMemberBinding="{Binding NumeroChiamatoID}" />
                    <GridViewColumn Header="Tipo" DisplayMemberBinding="{Binding TipoChiamata}" />
                    <GridViewColumn Header="Inizio" DisplayMemberBinding="{Binding DataArrivoChiamata}" />
                    <GridViewColumn Header="Fine" DisplayMemberBinding="{Binding DataFineChiamata}" />
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Window>
